<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tipsL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:id="@+id/tipsLoadingL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha"
        android:visibility="gone">

        <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tipsLoading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminateTint="@color/blue" />
    </FrameLayout>

    <ImageView
        android:id="@+id/tipsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/no_net" />

    <TextView
        android:id="@+id/tipsDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:lineSpacingExtra="5dp"
        android:text="You are lost!"
        android:textColor="@color/font"
        android:textSize="12sp" />

    <com.android.widget.ZdButton
        android:id="@+id/tipsRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingRight="35dp"
        android:paddingBottom="5dp"
        android:text="Reload"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:corner="90dp"
        app:normal_color="@color/blackLightMiddle" />
</LinearLayout>