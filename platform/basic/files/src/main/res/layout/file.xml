<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
    android:id="@+id/fileL"
  android:orientation="vertical">

  <com.android.widget.ZdEditText
    android:id="@+id/fileSearchEdit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/content"
    android:layout_margin="@dimen/content"
    android:drawableLeft="@mipmap/search"
    android:drawablePadding="@dimen/content"
    android:hint="搜索频道/Zd112号"
    android:padding="10dp"
    app:corners="5dp"
    app:isDelete="true"
    android:visibility="gone"
    app:normal_colors="#f7f7f7" />

  <com.android.widget.ZdRecycleView
    android:id="@+id/dirRecycleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fileSearchEdit"
    />

  <com.android.widget.ZdRecycleView
    android:layout_below="@+id/dirRecycleView"
    android:id="@+id/fileRecycleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
  <com.android.widget.ZdButton
    android:id="@+id/fileFloatBtn"
    android:layout_width="@dimen/head"
    android:layout_height="@dimen/head"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_margin="@dimen/content"
    android:textColor="@color/white"
    android:textSize="@dimen/normal"
    android:textStyle="bold"
    android:text="拍视频"
    app:corner="180dp"
    app:normal_color="@color/blue"
    />
</RelativeLayout>