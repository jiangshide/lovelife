<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="80dp"
  android:background="@drawable/bg_radius_white"
  android:layout_margin="5dp"
  android:id="@+id/quotaItemR"
  >
  <TextView
    android:id="@+id/quotaItemCoin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="50梵币"
    android:textSize="@dimen/big"
    android:textStyle="bold"
    android:textColor="@color/font"
    android:padding="5dp"
    />
  <TextView
    android:id="@+id/quotaItemMoney"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5元"
    android:textStyle="bold"
    android:textSize="@dimen/bigSuper"
    android:textColor="@color/redLight"
    android:layout_alignParentRight="true"
    android:padding="5dp"
    android:layout_alignParentBottom="true"
    />
  <com.android.widget.ZdButton
    android:id="@+id/quotaItemIncrease"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:normal_color="@color/yellowLight"
    android:paddingLeft="@dimen/content"
    android:paddingRight="@dimen/content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:textSize="@dimen/small"
    app:leftCorner="0dp"
    app:topCorner="10dp"
    app:rightCorner="10dp"
    app:bottomCorner="0dp"
    android:text="赠送10元代金券"
    android:textColor="@color/white"
    android:layout_marginBottom="@dimen/content"
    android:layout_alignParentBottom="true"

    />
</RelativeLayout>