<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >
  <androidx.cardview.widget.CardView
    android:id="@+id/channelTypeItemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/blackLightMiddle"
    android:layout_gravity="center_horizontal"
    app:cardElevation="5dp"
    android:layout_margin="@dimen/content"
    app:cardMaxElevation="5dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/content"
      android:orientation="vertical"
      android:padding="@dimen/content">

      <TextView
        android:id="@+id/channelTypeItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:text="公共频道"
        android:textColor="@color/font"
        android:textSize="@dimen/bigSuper"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/channelTypeItemDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content"
        android:textColor="@color/fontLight"
        android:text="创建有趣或者奇葩的频道，带领大家一起玩"
        android:textSize="@dimen/normal" />

      <TextView
        android:id="@+id/channelTypeItemNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:text="没两天只能创建一个频道"
        android:textColor="@color/fontLight"
        android:textSize="@dimen/normal" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>