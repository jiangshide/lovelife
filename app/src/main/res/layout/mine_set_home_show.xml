<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:text="首页默认显示"
        android:textColor="@color/fontLight"
        android:textSize="@dimen/normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关注"
            android:textColor="@color/font"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.android.widget.ZdBSwitch
            android:id="@+id/switchFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="false"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推荐"
            android:textColor="@color/font"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.android.widget.ZdBSwitch
            android:id="@+id/switchRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="true"
            app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发现"
            android:textColor="@color/font"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <com.android.widget.ZdBSwitch
            android:id="@+id/switchFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checked="false"
            app:checkedColor="@color/blue" />
    </LinearLayout>
</LinearLayout>