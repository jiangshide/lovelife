<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.android.widget.TagView
    android:id="@+id/reportTag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/content" />

  <TextView
    android:id="@+id/reportDes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/content"
    android:layout_marginTop="@dimen/content"
    android:text="补充您的描述:"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/big"
    android:textStyle="bold" />

  <com.android.widget.ZdEditText
    android:id="@+id/reportDesEdit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/content"
    android:layout_marginBottom="10dp"
    android:gravity="top"
    android:hint="请输入你的详细描述..."
    android:maxLength="200"
    android:imeOptions="actionNext"
    android:minLines="5"
    android:padding="@dimen/content"
    android:textColor="@color/font"
    android:textColorHint="@color/fontLight"
    android:textSize="@dimen/normal"
    android:textStyle="bold"
    app:corners="@dimen/default_corner"
    app:stroke_colors="@color/line"
    app:strokes="1dp" />

  <TextView
    android:id="@+id/reportDesTips"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:text="可输入200字符"
    android:layout_marginRight="@dimen/content"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/normal" />

  <com.android.widget.ZdButton
    android:id="@+id/reportSubmit"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buttonHeight"
    android:layout_marginTop="30dp"
    android:layout_marginRight="@dimen/content"
    android:layout_marginLeft="@dimen/content"
    android:enabled="false"
    android:onClick="userLogin"
    android:text="提交"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    app:corner="@dimen/button"
    app:normal_color="@color/disable" />
</LinearLayout>