<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:id="@+id/mapL"
  android:orientation="vertical" >
  <RelativeLayout
    android:id="@+id/mapTopR"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    >
    <com.android.widget.ZdImageView
      android:id="@+id/mapTopBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/back"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      />
    <RelativeLayout
      android:id="@+id/mapTopIconR"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_toLeftOf="@+id/blogChannelTopFollow"
      android:layout_toRightOf="@+id/mapTopBack"
      android:layout_marginLeft="@dimen/content"
      android:layout_marginRight="@dimen/content"
      android:gravity="center"
      >
      <com.android.widget.ZdCircleImg
        android:id="@+id/mapTopIcon"
        android:layout_width="@dimen/headSmall"
        android:layout_height="@dimen/headSmall"
        android:src="@mipmap/default_user"
        android:layout_marginRight="@dimen/content"
        app:civ_border_color="@color/blue"
        app:civ_border_width="2dp"
        />
      <com.android.widget.ZdTextView
        android:id="@+id/mapTopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="被山水相连被"
        android:textSize="@dimen/normal"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/font"
        android:layout_toRightOf="@+id/mapTopIcon"
        />
      <com.android.widget.ZdTextView
        android:id="@+id/mapTopDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相距:122212M"
        android:textSize="@dimen/small"
        android:textColor="@color/fontLight"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/mapTopIcon"
        android:layout_below="@+id/mapTopName"
        />
    </RelativeLayout>
    <com.android.widget.ZdButton
      android:id="@+id/mapTopFollow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/mapTopMore"
      android:text="关注"
      android:paddingLeft="@dimen/content"
      android:paddingRight="@dimen/content"
      android:paddingTop="2dp"
      android:paddingBottom="2dp"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      android:textStyle="bold"
      app:corner="@dimen/button"
      app:normal_color="@color/blue" />
    <com.android.widget.ZdImageView
      android:id="@+id/mapTopMore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/more"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      />
  </RelativeLayout>
  <com.amap.api.maps.MapView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/distanceMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>