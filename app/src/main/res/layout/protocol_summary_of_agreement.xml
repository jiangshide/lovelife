<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:background="@drawable/bg_radius_white"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    android:padding="@dimen/content"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="用户服务协议和用户隐私政策概要"
      android:textColor="@color/fontLight"
      android:textStyle="bold"
      android:padding="@dimen/content"
      android:textSize="@dimen/big"
      />
    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >
    <TextView
      android:id="@+id/summaryOfAgreement"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/summary_of_agreement"
      android:textColor="@color/font"
      android:textStyle="bold"
      android:textSize="@dimen/normal"
      />
    </androidx.core.widget.NestedScrollView>
    <com.android.widget.ZdButton
      android:id="@+id/summaryOfAgreementSubmit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="我知道了"
      android:paddingTop="@dimen/content"
      android:paddingBottom="@dimen/content"
      android:textSize="@dimen/normal"
      android:textStyle="bold"
      android:textColor="@color/white"
      app:normal_color="@color/blue"
      app:corner="90dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginTop="@dimen/content"
      android:layout_marginBottom="@dimen/content"
      />
  </LinearLayout>
</RelativeLayout>