<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:id="@+id/lrcAddL"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/songNameF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/content">

    <com.android.widget.ZdEditText
      android:id="@+id/songNameEdit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="45dp"
      android:drawablePadding="@dimen/content"
      android:ellipsize="end"
      android:hint="..."
      android:maxLines="1"
      android:padding="10dp"
      android:textColor="@color/font"
      android:textColorHint="@color/fontLight"
      android:textSize="@dimen/normal"
      app:corners="5dp"
      app:isDelete="true"
      app:normal_colors="@color/blackLight" />

    <com.android.widget.ZdButton
      android:id="@+id/songNameBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/content"
      android:paddingRight="@dimen/content"
      android:text="歌名"
      android:textColor="@color/font"
      android:textSize="@dimen/big"
      app:bottomCorner="5dp"
      app:leftCorner="5dp"
      app:normal_color="@color/blackLightMiddle"
      app:press_color="@color/blackLight"
      app:rightCorner="0dp"
      app:topCorner="0dp" />
  </FrameLayout>

  <FrameLayout
    android:id="@+id/songUrlZhF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/content">

    <com.android.widget.ZdEditText
      android:id="@+id/songUrlZhEdit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="45dp"
      android:drawablePadding="@dimen/content"
      android:ellipsize="end"
      android:hint="..."
      android:maxLines="1"
      android:padding="10dp"
      android:textColor="@color/font"
      android:textColorHint="@color/fontLight"
      android:textSize="@dimen/normal"
      app:corners="5dp"
      app:isDelete="true"
      app:normal_colors="@color/blackLight" />

    <com.android.widget.ZdButton
      android:id="@+id/songUrlZhBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/content"
      android:paddingRight="@dimen/content"
      android:text="URL~ZH"
      android:textColor="@color/font"
      android:textSize="@dimen/big"
      app:bottomCorner="5dp"
      app:leftCorner="5dp"
      app:normal_color="@color/blackLightMiddle"
      app:press_color="@color/blackLight"
      app:rightCorner="0dp"
      app:topCorner="0dp" />

    <com.android.widget.ZdButton
      android:id="@+id/songUrlZhFileBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="right"
      android:paddingLeft="@dimen/content"
      android:paddingRight="@dimen/content"
      android:text="文件"
      android:textColor="@color/font"
      android:textSize="@dimen/big"
      android:textStyle="bold"
      app:bottomCorner="0dp"
      app:leftCorner="0dp"
      app:normal_color="@color/blackLightMiddle"
      app:press_color="@color/blackLight"
      app:rightCorner="5dp"
      app:topCorner="5dp" />
  </FrameLayout>

  <FrameLayout
    android:id="@+id/songUrlEsF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/content">

    <com.android.widget.ZdEditText
      android:id="@+id/songUrlEsEdit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="45dp"
      android:drawablePadding="@dimen/content"
      android:ellipsize="end"
      android:hint="..."
      android:maxLines="1"
      android:padding="10dp"
      android:textColor="@color/font"
      android:textColorHint="@color/fontLight"
      android:textSize="@dimen/normal"
      app:corners="5dp"
      app:isDelete="true"
      app:normal_colors="@color/blackLight" />

    <com.android.widget.ZdButton
      android:id="@+id/songUrlEsBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/content"
      android:paddingRight="@dimen/content"
      android:text="URL~ES"
      android:textColor="@color/font"
      android:textSize="@dimen/big"
      app:bottomCorner="5dp"
      app:leftCorner="5dp"
      app:normal_color="@color/blackLightMiddle"
      app:press_color="@color/blackLight"
      app:rightCorner="0dp"
      app:topCorner="0dp" />

    <com.android.widget.ZdButton
      android:id="@+id/songUrlEsFileBtn"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="right"
      android:paddingLeft="@dimen/content"
      android:paddingRight="@dimen/content"
      android:text="文件"
      android:textColor="@color/font"
      android:textSize="@dimen/big"
      android:textStyle="bold"
      app:bottomCorner="0dp"
      app:leftCorner="0dp"
      app:normal_color="@color/blackLightMiddle"
      app:press_color="@color/blackLight"
      app:rightCorner="5dp"
      app:topCorner="5dp" />
  </FrameLayout>

  <com.android.resource.view.lrc.LrcView
    android:id="@+id/lrcModifyView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_above="@+id/lrcBtnProgressL"
    android:layout_margin="@dimen/content"
    android:layout_weight="1"
    app:lrcAnimationDuration="1000"
    app:lrcCurrentTextColor="@color/blueLight"
    app:lrcDividerHeight="20dp"
    app:lrcLabel="找不到歌词(@_@)"
    app:lrcNormalTextColor="@color/txtGray"
    app:lrcNormalTextSize="15sp"
    app:lrcPadding="16dp"
    app:lrcTextGravity="center"
    app:lrcTextSize="15sp"
    app:lrcTimeTextColor="#BDBDBD"
    app:lrcTimelineColor="#80BDBDBD"
    app:lrcTimelineTextColor="#9FA8DA" />
</LinearLayout>