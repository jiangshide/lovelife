<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="1dp"
  >

  <com.android.widget.ZdImageView
    android:id="@+id/findItemImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="400dp"
    android:scaleType="centerCrop"
    android:src="@mipmap/ic_launcher" />

  <com.android.widget.ZdImageView
    android:id="@+id/findItemFormat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:scaleType="centerCrop"
    android:src="@mipmap/img"
    android:layout_margin="5dp"
    android:tint="@color/white" />

  <LinearLayout
    android:id="@+id/findItemUserL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <com.android.widget.ZdImageView
      android:id="@+id/findItemIcon"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:scaleType="centerCrop"
      android:src="@mipmap/default_user" />
    <TextView
      android:id="@+id/findItemName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableLeft="@mipmap/sex_women"
      android:text=".北京市"
      android:layout_marginTop="3dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/font"
      android:textSize="@dimen/small"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/findItemChannelL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/findItemChannel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="# 频道"
      android:textColor="@color/font"
      android:textSize="@dimen/small" />

    <TextView
      android:id="@+id/findItemLike"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/like_write"
      android:drawablePadding="4dp"
      android:layout_marginTop="1dp"
      android:gravity="center"
      android:text="0"
      android:textColor="@color/font"
      android:textSize="@dimen/small"
      android:textStyle="bold"
      android:visibility="visible" />
  </LinearLayout>

  <com.android.widget.ZdButton
    android:id="@+id/findItemFollow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingLeft="8dp"
    android:paddingTop="3dp"
    android:visibility="gone"
    android:paddingRight="8dp"
    android:paddingBottom="3dp"
    android:text="关注"
    android:textColor="@color/white"
    android:textSize="@dimen/small"
    android:textStyle="bold"
    app:corner="1dp"
    app:normal_color="@color/yellowLight" />
</RelativeLayout>