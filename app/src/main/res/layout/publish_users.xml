<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.android.widget.ZdRecycleView
    android:id="@+id/usesSelectedRecycleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" />

  <com.android.widget.ZdEditText
    android:id="@+id/usesEdit"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:drawableLeft="@mipmap/search"
    android:layout_margin="@dimen/content"
    android:padding="@dimen/content"
    android:drawablePadding="@dimen/content"
    android:layout_below="@+id/usesSelectedRecycleView"
    android:maxLines="1"
    android:imeOptions="actionSearch"
    android:textCursorDrawable="@null"
    android:textSize="@dimen/normal"
    android:textColor="@color/font"
    android:textColorHint="@color/fontLight"
    android:hint="关键字..."
    app:corners="90dp"
    app:isDelete="true"
    />

  <com.android.widget.ZdRecycleView
    android:id="@+id/usesRecycleView"
    android:layout_width="match_parent"
    android:layout_below="@+id/usesEdit"
    android:layout_height="match_parent"
    android:orientation="vertical" />

</RelativeLayout>