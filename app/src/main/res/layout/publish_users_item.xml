<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/content"
  android:id="@+id/usersR"
  >

  <ImageView
    android:id="@+id/usersIcon"
    android:layout_width="@dimen/head"
    android:layout_height="@dimen/head"
    android:layout_marginRight="@dimen/content"
    android:scaleType="centerCrop"
    android:src="@mipmap/default_user" />

  <TextView
    android:id="@+id/usersNick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/usersIcon"
    android:text="nick"
    android:textColor="@color/font"
    android:textSize="@dimen/normal" />

  <TextView
    android:id="@+id/usersDes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/usersNick"
    android:layout_marginTop="5dp"
    android:layout_toRightOf="@+id/usersIcon"
    android:text="des"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/small" />
  <ImageView
    android:id="@+id/userCheck"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/select"
    android:visibility="gone"
    android:layout_alignParentRight="true"
    />
</RelativeLayout>