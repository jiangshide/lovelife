<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/content"
  >
  <com.android.widget.ZdImageView
    android:id="@+id/channelListItemIcon"
    android:layout_width="@dimen/head"
    android:layout_height="@dimen/head"
    android:layout_marginRight="@dimen/content"
    android:scaleType="fitXY"
    android:layout_centerVertical="true"
    android:src="@mipmap/default_user"
    />
  <TextView
    android:id="@+id/channelListItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/channelListItemIcon"
    android:textSize="@dimen/big"
    android:textStyle="bold"
    android:layout_marginTop="5dp"
    android:maxLines="1"
    android:textColor="@color/font"
    android:ellipsize="end"
    />
  <com.android.widget.ZdButton
    android:id="@+id/channelListItemSign"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="2dp"
    android:gravity="center"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="2dp"
    android:text="官方"
    android:visibility="gone"
    android:textColor="@color/white"
    android:textSize="@dimen/small"
    android:layout_toRightOf="@+id/channelListItemName"
    android:textStyle="bold"
    app:normal_color="@color/blue" />
  <TextView
    android:id="@+id/channelListItemType"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/channelListItemName"
    android:layout_alignBaseline="@+id/channelListItemName"
    android:textSize="@dimen/normal"
    android:layout_marginTop="5dp"
    android:maxLines="1"
    android:ellipsize="end"
    android:visibility="gone"
    android:textColor="@color/fontLight"
    />
  <TextView
    android:id="@+id/channelListItemDes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/channelListItemIcon"
    android:layout_below="@+id/channelListItemName"
    android:textSize="@dimen/small"
    android:maxLines="2"
    android:ellipsize="end"
    android:layout_toLeftOf="@+id/channelListItemStatus"
    android:layout_marginRight="@dimen/content"
    android:textColor="@color/fontLight"
    />
  <TextView
    android:id="@+id/channelListItemStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableRight="@mipmap/arrow"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:textColor="@color/font"
    android:visibility="visible"
    android:drawablePadding="@dimen/content"
    />
</RelativeLayout>