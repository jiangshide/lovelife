<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/content"
  >
  <com.android.widget.ZdImageView
    android:id="@+id/followItemIcon"
    android:layout_width="@dimen/head"
    android:layout_height="@dimen/head"
    android:src="@mipmap/default_user"
    android:layout_marginRight="@dimen/content"
    />
  <TextView
    android:id="@+id/followItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="name"
    android:layout_toRightOf="@+id/followItemIcon"
    android:textSize="@dimen/big"
    android:textStyle="bold"
    android:textColor="@color/font"
    />
  <TextView
    android:id="@+id/followItemDes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="粉丝:122"
    android:layout_toRightOf="@+id/followItemIcon"
    android:layout_below="@+id/followItemName"
    android:layout_marginTop="5dp"
    android:textSize="@dimen/normal"
    android:textColor="@color/fontLight"
    />
  <com.android.widget.ZdButton
    android:id="@+id/followItemStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/mineTopMore"
    android:layout_alignParentRight="true"
    android:ellipsize="marquee"
    android:paddingLeft="@dimen/content"
    android:paddingTop="3dp"
    android:paddingRight="@dimen/content"
    android:paddingBottom="3dp"
    android:singleLine="true"
    android:text="关注TA"
    android:textColor="@color/white"
    android:textStyle="bold"
    app:corner="5dp"
    app:normal_color="@color/blue"
    app:stroke="@dimen/line"
    app:stroke_color="@color/gray" />
</RelativeLayout>