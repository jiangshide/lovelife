<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/profileRootL"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="@dimen/content">

  <FrameLayout
    android:id="@+id/userIconF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >

    <com.android.widget.ZdCircleImg
      android:id="@+id/userProfileIcon"
      android:layout_width="@dimen/headBig"
      android:layout_height="@dimen/headBig"
      android:scaleType="centerCrop"
      android:src="@mipmap/default_user"
      app:civ_border_color="@color/blue"
      app:civ_border_width="2dp" />

    <com.android.widget.ZdImageView
      android:id="@+id/userProfileV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right|bottom"
      android:src="@mipmap/v" />
  </FrameLayout>

  <TextView
    android:id="@+id/userProfileId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="@dimen/content"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/normal" />

  <com.android.widget.ZdTextView
    android:id="@+id/userProfileInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/content"
    android:paddingTop="3dp"
    android:paddingRight="@dimen/content"
    android:paddingBottom="3dp"
    android:text="这家伙什么也没留下!"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/normal"
    />

  <LinearLayout
    android:id="@+id/userProfileNickL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/content"
    android:padding="@dimen/content">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="昵称"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileNick"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/unknow"
      android:gravity="right"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/userProfileSexL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="性别"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileSex"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/unknow"
      android:textColor="@color/font"
      android:gravity="right"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/userProfileBirthdayL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="生日(阴历)"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileBirthday"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/unknow"
      android:gravity="right"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/userProfileAgeL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    android:visibility="gone">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="生肖"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileAge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/userProfileZodiacL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    android:visibility="gone">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="生肖"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileZodiac"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/userProfileConstellationL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    android:visibility="gone">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="星座"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileConstellation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/userProfileCityL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="城市"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfileCity"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/unknow"
      android:textColor="@color/font"
      android:gravity="right"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/userProfilePhoneL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    android:visibility="visible">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="手机"
      android:textColor="@color/font"
      android:textSize="@dimen/normal" />

    <TextView
      android:id="@+id/userProfilePhone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/unknow"
      android:textColor="@color/font"
      android:gravity="right"
      android:textSize="@dimen/normal"
      android:textStyle="bold" />
  </LinearLayout>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    android:text="爱好："
    android:textColor="@color/font"
    android:textSize="@dimen/normal" />
  <com.android.widget.TagView
    android:id="@+id/userProfileHobby"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/content" />
</LinearLayout>