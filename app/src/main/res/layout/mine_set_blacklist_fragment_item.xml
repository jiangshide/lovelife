<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="@dimen/content"
  >
  <com.android.widget.ZdImageView
    android:id="@+id/blackListItemIcon"
    android:layout_width="@dimen/head"
    android:layout_height="@dimen/head"
    android:src="@mipmap/default_user"
    android:scaleType="centerCrop"
    android:layout_marginRight="@dimen/content"
    />
  <TextView
    android:id="@+id/blackListItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/blackListItemIcon"
    android:textStyle="bold"
    android:text="备受泄露"
    android:textColor="@color/font"
    android:textSize="@dimen/big"
    />
  <TextView
    android:id="@+id/blackListItemChannel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/blackListItemIcon"
    android:layout_below="@+id/blackListItemName"
    android:textStyle="bold"
    android:text="已产生内容(10/20)"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/normal"
    android:layout_marginTop="5dp"
    />

  <TextView
    android:id="@+id/blackListItemDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginTop="@dimen/content"
    android:textStyle="bold"
    android:text="2019-08-02"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/normal"
    android:drawableRight="@mipmap/arrow"
    android:drawablePadding="@dimen/content"
    />
  <com.android.widget.ZdTextView
    android:id="@+id/blackListItemReason"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/blackListItemChannel"
    android:textStyle="bold"
    android:textColor="@color/font"
    android:layout_marginTop="@dimen/content"
    android:gravity="right"
    android:textSize="@dimen/normal"
    />

</RelativeLayout>