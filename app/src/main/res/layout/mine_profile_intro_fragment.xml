<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/content"
  android:orientation="vertical"
  >
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="有意思的简介会吸引更多的关注~"
    android:textSize="@dimen/normal"
    android:textColor="@color/fontLight"
    android:layout_marginTop="30dp"
    />
  <com.android.widget.ZdEditText
    android:id="@+id/editProfileIntro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content"
    android:hint="写一段让别人容易记住你的话..."
    android:textColor="@color/font"
    android:textColorHint="@color/fontLight"
    android:textStyle="bold"
    android:textSize="@dimen/normal"
    android:minLines="10"
    android:maxLength="200"
    android:gravity="top"
    app:strokes="1dp"
    app:stroke_colors="@color/line"
    app:corners="@dimen/default_corner"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    />
  <TextView
    android:id="@+id/editProfileIntroTips"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="可输入200字符"
    android:textSize="@dimen/normal"
    android:textColor="@color/fontLight"
    android:layout_gravity="right"
    />
</LinearLayout>