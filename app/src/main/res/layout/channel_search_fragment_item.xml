<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/content"
  >
  <com.android.widget.ZdImageView
    android:id="@+id/channelSearchIcon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@mipmap/default_user"
    android:scaleType="fitXY"
    android:layout_marginRight="@dimen/content"
    />
  <TextView
    android:id="@+id/channelSearchName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="titledesdesdesdes"
    android:textSize="@dimen/normal"
    android:textStyle="bold"
    android:maxLines="1"
    android:ellipsize="end"
    android:textColor="@color/font"
    android:layout_toRightOf="@+id/channelSearchIcon"
    />
  <com.android.widget.ZdButton
    android:id="@+id/channelSearchMarket"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="@dimen/small"
    android:textStyle="bold"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:maxLines="1"
    android:ellipsize="end"
    android:layout_toRightOf="@+id/channelSearchName"
    android:layout_alignBaseline="@+id/channelSearchName"
    android:layout_marginLeft="10dp"
    app:normal_color="@color/yellowLight"
    />
  <TextView
    android:id="@+id/channelSearchDes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="公产生30条内容"
    android:textColor="@color/font"
    android:textSize="@dimen/normal"
    android:textStyle="bold"
    android:layout_marginTop="6dp"
    android:maxLines="1"
    android:ellipsize="end"
    android:layout_toRightOf="@+id/channelSearchIcon"
    android:layout_below="@+id/channelSearchName"
    android:layout_toLeftOf="@+id/channelSearchArrow"
    />
  <TextView
    android:id="@+id/channelSearchArrow"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="公产生30条内容"
    android:visibility="gone"
    android:textColor="@color/fontLight"
    />
</RelativeLayout>