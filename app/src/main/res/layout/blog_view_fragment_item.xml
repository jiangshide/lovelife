<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/viewItemIconF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <com.android.widget.ZdCircleImg
      android:id="@+id/viewItemIcon"
      android:layout_width="@dimen/headBig"
      android:layout_height="@dimen/headBig"
      android:layout_margin="@dimen/content"
      android:scaleType="centerCrop"
      android:src="@mipmap/default_user" />

    <com.android.widget.ZdButton
      android:id="@+id/viewItemSubmit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right|center_vertical"
      android:paddingLeft="5dp"
      android:paddingTop="2dp"
      android:paddingRight="5dp"
      android:paddingBottom="2dp"
      android:text="关注"
      android:textColor="@color/white"
      android:textSize="@dimen/small"
      app:corner="5dp"
      app:normal_color="@color/blue" />
  </FrameLayout>

  <TextView
    android:id="@+id/viewItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/viewItemIconF"
    android:layout_centerHorizontal="true"
    android:text="梵记王子"
    android:textColor="@color/font"
    android:textSize="@dimen/big"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/viewItemAge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/viewItemName"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:drawableLeft="@mipmap/sex_women"
    android:text=".23.北京"
    android:textColor="@color/fontLight"
    android:textSize="@dimen/small"
    android:textStyle="bold" />
</RelativeLayout>