<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="2dp">

  <com.android.widget.ZdImageView
    android:id="@+id/channelItemImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="400dp"
    android:scaleType="fitXY"
    android:src="@mipmap/ic_launcher" />

  <com.android.widget.ZdImageView
    android:id="@+id/channelItemFormat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_margin="5dp"
    android:scaleType="fitXY"
    android:src="@mipmap/img" />

  <LinearLayout
    android:id="@+id/channelItemUserL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:padding="5dp">

    <com.android.widget.ZdImageView
      android:id="@+id/channelItemIcon"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:scaleType="fitXY"
      android:src="@mipmap/default_user" />
    <TextView
      android:id="@+id/channelItemName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableLeft="@mipmap/sex_women"
      android:text=".北京市"
      android:layout_marginTop="3dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/font"
      android:textSize="@dimen/small"
      android:textStyle="bold" />
    <TextView
      android:id="@+id/channelItem"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/font"
      android:textSize="@dimen/small"
      android:textStyle="bold" />
  </LinearLayout>

  <TextView
    android:id="@+id/channelItemLike"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="1dp"
    android:drawableTop="@drawable/like_write"
    android:drawablePadding="4dp"
    android:gravity="center"
    android:padding="5dp"
    android:textColor="@color/font"
    android:textSize="@dimen/small"
    android:textStyle="bold"
    android:visibility="visible" />

  <TextView
    android:id="@+id/channelItemFollow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_margin="5dp"
    android:textColor="@color/font"
    android:textSize="@dimen/big"
    android:textStyle="bold" />

</RelativeLayout>