<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_dialog_radius_top"
  android:orientation="vertical"
  android:padding="@dimen/content">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="字体大小与位置设置"
    android:layout_gravity="center_horizontal"
    android:textColor="@color/font"
    android:textSize="@dimen/normal" />

  <TextView
    android:id="@+id/pickerPositionTxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="默认选择"
    android:layout_marginTop="@dimen/content"
    android:textColor="@color/font"
    android:textSize="@dimen/normal" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="20dp">

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionLeft"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|center_vertical"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="左中"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionLeftTop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|top"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="左上"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/blueLight" />

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionTopCenter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center_horizontal"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="上中"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionRightTop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="右上"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionRightCenter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right|center_vertical"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="右中"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionRightBottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right|bottom"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="右下"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />
    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionLeftBottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|bottom"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="左下"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />
    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionBottomCenter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|bottom"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="下中"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />

    <com.android.widget.ZdButton
      android:id="@+id/pickerPositionCenter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="居中"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/gray" />
  </FrameLayout>

  <TextView
    android:id="@+id/pickerFontSize"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="字体大小: 17"
    android:textColor="@color/font"
    android:textSize="@dimen/normal" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.android.widget.ZdButton
      android:id="@+id/fontReduce"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/content"
      android:layout_marginTop="@dimen/content"
      android:layout_marginBottom="@dimen/content"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="小"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/blue" />

    <SeekBar
      android:id="@+id/fontSizeSeekBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:max="25"
      android:progress="0"
      android:maxHeight="2dp"
      android:minHeight="1dp"
      android:progressDrawable="@drawable/seek_progress"
      android:thumb="@drawable/seek_thumb"
      android:thumbOffset="0dp" />

    <com.android.widget.ZdButton
      android:id="@+id/fontAdd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/content"
      android:paddingTop="5dp"
      android:paddingRight="@dimen/content"
      android:paddingBottom="5dp"
      android:text="大"
      android:textColor="@color/font"
      android:textSize="@dimen/normal"
      app:normal_color="@color/blueLight" />
  </LinearLayout>

  <com.android.widget.ZdButton
    android:id="@+id/pickerPositionSure"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/alphaSlideBar"
    android:layout_marginTop="30dp"
    android:padding="@dimen/content"
    android:text="@string/sure"
    android:textColor="@color/fontLight"
    android:textSize="16sp"
    android:textStyle="bold"
    app:corner="6dp"
    app:normal_color="@color/bg"
    app:press_color="@color/gray" />
</LinearLayout>