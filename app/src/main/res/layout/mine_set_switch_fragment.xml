<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/content"
      android:layout_marginTop="@dimen/content"
      android:text="互动消息通知"
      android:textColor="@color/fontLight"
      android:textSize="@dimen/normal" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="动态获得点赞时"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="关注了我"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchFollowed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="true"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="看了我的主页"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchBrowseHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="看了我的频道"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchBrowseChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="看了我的动态"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchBrowseBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="创建了一个频道"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchCreatedChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="发布了一个动态"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchPublishBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/content"
      android:layout_marginTop="20dp"
      android:text="push提示"
      android:textColor="@color/fontLight"
      android:textSize="@dimen/normal" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="默认"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="true"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="声音"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="震动"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchShock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/content">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="亮屏"
        android:textColor="@color/font"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

      <com.android.widget.ZdBSwitch
        android:id="@+id/switchLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedColor="@color/blue" />
    </LinearLayout>
  </LinearLayout>

</androidx.core.widget.NestedScrollView>