<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="@dimen/content"
    android:id="@+id/lrcFeedbackL"
  >
  <com.android.widget.ZdEditText
    android:id="@+id/feedbackEdit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minLines="8"
    android:hint="@string/feedback"
    android:gravity="top"
    android:imeOptions="actionNext"
    android:background="@drawable/view_border_bottom"
    android:padding="@dimen/content"
    android:textColor="@color/font"
    android:textColorHint="@color/fontLight"
    android:textCursorDrawable="@null"
    android:layout_marginTop="@dimen/content"
    />
  <com.android.widget.ZdImageView
    android:id="@+id/feedbackImg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/image_placeholder"
    android:scaleType="centerCrop"
    />
  <com.android.widget.ZdEditText
    android:id="@+id/feedbackMethod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/contact"
    android:maxLines="1"
    android:imeOptions="actionDone"
    android:textCursorDrawable="@null"
    android:textColor="@color/font"
    android:textColorHint="@color/fontLight"
    android:padding="@dimen/content"
    android:background="@drawable/view_border_bottom"
    android:layout_marginTop="@dimen/content"
    />
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/feedback_tips"
    android:drawableLeft="@mipmap/unmine"
    android:layout_marginTop="@dimen/content"
    android:textColor="@color/fontLight"
    android:drawablePadding="@dimen/content"
    />
</LinearLayout>