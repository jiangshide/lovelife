<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/publishCommonL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/publishChannelL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publishIntro"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:layout_marginRight="@dimen/content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publishChanneNameIcon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/channel"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="参与频道"
            android:textColor="@color/font"
            android:textSize="@dimen/big" />

        <com.android.widget.ZdImageView
            android:id="@+id/publishChanneNameCover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/publishChanneName"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/publishChanneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="8dp"
            android:text="合适的频道能获得更多的关注"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/publishLocationL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:layout_marginRight="@dimen/content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publishLocationNameIcon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/foot"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="足迹"
            android:textColor="@color/font"
            android:textSize="@dimen/big" />

        <TextView
            android:id="@+id/publishLocationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="8dp"
            android:gravity="right"
            android:text="找个地方踩一脚"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publishRemindL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:layout_marginRight="@dimen/content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publishRemindTipsIcon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/at"
            android:drawablePadding="5dp"
            android:text="用户"
            android:textColor="@color/font"
            android:textSize="@dimen/big" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/publishRemindTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/fontLight"
                android:textSize="@dimen/normal" />

            <com.android.widget.ZdRecycleView
                android:id="@+id/publishRemindRecycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.android.widget.ZdImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publishRecommendChannelL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:layout_marginRight="@dimen/content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/publishRecommendChannelTipsIcon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/wei"
            android:drawablePadding="5dp"
            android:text="频道"
            android:textColor="@color/font"
            android:textSize="@dimen/big" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/publishRecommendChannelTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/fontLight"
                android:textSize="@dimen/normal" />

            <com.android.widget.ZdRecycleView
                android:id="@+id/publishRecommendChannelRecycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.android.widget.ZdImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/publishAudioL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:layout_marginRight="@dimen/content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/publishAudioIcon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/music"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/font"
            android:textSize="@dimen/big" />

        <com.android.widget.ZdImageView
            android:id="@+id/publishAudioCover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/publishAudio"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/publishAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="8dp"
            android:text="无"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publishSyncL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content"
        android:layout_marginTop="@dimen/content"
        android:layout_marginRight="@dimen/content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/publishSyncSwitchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/unweixin"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:text="微信同步"
            android:textColor="@color/font"
            android:textSize="@dimen/big" />

        <TextView
            android:id="@+id/publishSyncSwitchTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/publishSyncSwitch"
            android:text="偶尔暴露一下"
            android:textColor="@color/fontLight"
            android:textSize="@dimen/normal" />

        <com.android.widget.ZdBSwitch
            android:id="@+id/publishSyncSwitch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>