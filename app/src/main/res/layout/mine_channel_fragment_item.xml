<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/content"
  android:focusable="false"
  >
  <com.android.widget.ZdImageView
    android:id="@+id/myChannelItemIcon"
    android:layout_width="@dimen/head"
    android:layout_height="@dimen/head"
    android:src="@mipmap/default_user"
    android:scaleType="fitXY"
    android:layout_marginRight="@dimen/content"
    android:layout_centerVertical="true"
    />
  <TextView
    android:id="@+id/myChannelItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="janeky"
    android:layout_toRightOf="@+id/myChannelItemIcon"
    android:textSize="@dimen/big"
    android:textStyle="bold"
    android:textColor="@color/font"
    android:maxLines="1"
    android:ellipsize="end"
    />
  <com.android.widget.ZdButton
    android:id="@+id/myChannelItemType"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/myChannelItemName"
    android:textSize="@dimen/small"
    android:enabled="false"
    android:focusable="false"
    android:layout_marginTop="3dp"
    android:textColor="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:text="共有"
    android:paddingLeft="10dp"
    android:textStyle="bold"
    android:paddingRight="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:maxLines="1"
    android:ellipsize="end"
    app:normal_color="@color/yellowLight"
    app:corner="2dp"
    />
  <TextView
    android:id="@+id/myChannelItemDes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/myChannelItemIcon"
    android:layout_below="@+id/myChannelItemName"
    android:textColor="@color/fontLight"
    android:layout_marginTop="5dp"
    android:textSize="@dimen/small"
    android:maxLines="2"
    android:text="ssss"
    android:ellipsize="end"
    android:layout_toLeftOf="@+id/myChannelItemStatus"
    android:layout_marginRight="@dimen/content"
    />
  <TextView
    android:id="@+id/myChannelItemDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2020.02.10"
    android:layout_alignParentRight="true"
    android:textSize="@dimen/small"
    android:textColor="@color/fontLight"
    android:drawablePadding="@dimen/content"
    android:layout_marginBottom="10dp"
    android:layout_alignBaseline="@+id/myChannelItemName"
    />
  <TextView
    android:id="@+id/myChannelItemStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="产生(10)条"
    android:textSize="@dimen/normal"
    android:textColor="@color/fontLight"
    android:layout_alignParentRight="true"
    android:layout_alignBaseline="@+id/myChannelItemDes"
    android:drawablePadding="@dimen/content"
    />
</RelativeLayout>